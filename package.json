{
  "name": "githook_react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-scripts": "1.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "config": {
    "pre-git": {
      "enabled": true,
      "msg-pattern": "^(US|DE)\\d+ - .+",
      "commit-msg": "simple",
      "pre-commit": [
        "npm start"
      ],
      "post-commit": "git status",
      "pre-push": [
        "rm -rf node_modules",
        "npm install",
        "npm build",
        "npm test"
      ],
      "post-checkout": "npm install",
      "post-merge": "npm install"
    }
  },
  "release": {
    "analyzeCommits": "simple-commit-message"
  },
  "devDependencies": {
    "pre-git": "^3.17.1"
  }
}
